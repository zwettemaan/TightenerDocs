#
# Remotely run ExtendScript commands for a Jupyter Notebook Kernel
#

if [ "$1" = "" ]; then
    echo "Usage:"
    echo "  `basename \"$0\"` target"
    exit
fi

export RRT_REMOTE_URL="$1"

export RRT_JUPYTER_SESSION_ID=`uuidgen | sed "s/-//g"`
export COORDINATOR_NAME="net.tightener.coordinator.kernelconsole.${RRT_JUPYTER_SESSION_ID}"

# -N <short> : short coordinator name
# -I         : read standard stdin 
# -t n       : no tests to be run
# -z         : ignore SIGINT signals
# -f <path>  : process script

Tightener -N ${COORDINATOR_NAME} -I -t n -z -f "${TIGHTENER_SCRIPTS}rrt_REPL.tql"

echo "Done."
