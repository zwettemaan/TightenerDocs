if [ "${TIGHTENER_RELEASE_ROOT}" = "" ]; then
    echo "\$TIGHTENER_RELEASE_ROOT has not been set up. Please follow instructions in README.md"
    exit
fi

if [ ! -d "${TIGHTENER_RELEASE_ROOT}" ]; then
    exit
fi

pushd "${HOME}/Library/Application Support" > /dev/null

if [ ! -d "net.tightener" ]; then
    exit
fi

if [ ! -d "net.tightener/SysConfig" ]; then
    exit
fi

cd "net.tightener/SysConfig"

if [ ! -e config.ini ]; then
    exit
fi

if [ -e "${TIGHTENER_RELEASE_ROOT}SampleScripts/TestScripts/savedConfig.ini" ]; then
    exit
fi

if grep "isDebugConfig" config.ini; then
    exit
fi

cp config.ini "${TIGHTENER_RELEASE_ROOT}SampleScripts/TestScripts/savedConfig.ini" 

echo config.ini was saved

popd > /dev/null


