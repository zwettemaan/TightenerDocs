if [ "${TIGHTENER_RELEASE_ROOT}" = "" ]; then
    echo "\$TIGHTENER_RELEASE_ROOT has not been set up. Please follow instructions in README.md"
    exit
fi

if [ ! -d "${TIGHTENER_RELEASE_ROOT}" ]; then
    exit
fi

if [ ! -d "${HOME}/Library/Application Support/net.tightener" ]; then
    exit
fi

if [ ! -d "${HOME}/Library/Application Support/net.tightener/SysConfig" ]; then
    exit
fi

if [ ! -e "${HOME}/Library/Application Support/net.tightener/SysConfig/config.ini" ]; then
    exit
fi

if [ -e "${TIGHTENER_RELEASE_ROOT}SampleScripts/TestScripts/savedConfig.ini" ]; then
    exit
fi

if grep "isDebugConfig" "${HOME}/Library/Application Support/net.tightener/SysConfig/config.ini"; then
    exit
fi

cp "${HOME}/Library/Application Support/net.tightener/SysConfig/config.ini" "${TIGHTENER_RELEASE_ROOT}SampleScripts/TestScripts/savedConfig.ini" 

echo config.ini was saved